@model IEnumerable<Pet_Web_Application_10._12._24_F.Models.CartItem>

<h2>Shopping Cart</h2>
<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>$@item.Price</td>
                <td>@item.Quantity</td>
                <td>$@(item.Price * item.Quantity)</td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.ProductId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>Total: $@ViewBag.Total</p>