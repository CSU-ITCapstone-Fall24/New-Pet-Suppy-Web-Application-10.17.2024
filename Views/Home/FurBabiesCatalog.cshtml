@model IEnumerable<Pet_Web_Application_10._12._24_F.Models.Puppy>

@{
    ViewData["Title"] = "Fur Babies Catalog";
}

<div>
    <h1>Fur Babies Catalog</h1>
    <div class="puppy-catalog">
        @foreach (var puppy in Model)
        {
            <div class="puppy-item">
                <img src="@puppy.ImageUrl" alt="@puppy.Name" class="puppy-image" />
                <h3>@puppy.Name</h3>
                <p>Price: @puppy.Price.ToString("C")</p>
                <form asp-action="Adopt" method="post">
                    <input type="hidden" name="puppyId" value="@puppy.Id" />
                    <button type="submit">Adopt</button>
                </form>
                <form asp-action="Donate" method="post">
                    <input type="hidden" name="puppyId" value="@puppy.Id" />
                    <button type="submit">Donate</button>
                </form>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .puppy-catalog {
            display: flex;
            flex-wrap: wrap;
        }

        .puppy-item {
            border: 1px solid #ccc;
            padding: 16px;
            margin: 16px;
            text-align: center;
            width: 200px;
        }

        .puppy-image {
            width: 100%;
            height: auto;
        }
    </style>
}