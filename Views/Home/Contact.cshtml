@{
    ViewData["Title"] = "Contact Us";
}

<h2 class="bold-white">Contact Us</h2>
<form id="contact-form" method="post" action="/Contact/Submit">
    <div class="form-group">
        <label for="name" class="bold-black">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="form-group">
        <label for="email" class="bold-black">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="form-group">
        <label for="subject" class="bold-black">Subject</label>
        <input type="text" class="form-control" id="subject" name="subject" required>
    </div>
    <div class="form-group">
        <label for="message" class="bold-black">Message</label>
        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="contact-us">
    <h2 class="bold-black">Contact Us</h2>
    <p class="bold-black">We are here to assist you 24/7! Feel free to reach out to us anytime, Monday through Friday. Call us at <strong>555-555-0000</strong> for any inquiries or support. We look forward to hearing from you!</p>
</div>
<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Donate", "Home")'">Donate</button>

<style>
    .bold-white {
        color: white;
        font-weight: bold;
    }
</style>